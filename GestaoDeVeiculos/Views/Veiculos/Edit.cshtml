@model GestaoDeVeiculos.Models.Veiculo

@{
    ViewData["Title"] = "Edit";
}

<h1>Alterar</h1>

<h4>Veiculo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
